<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
     
	<locale-config>
      	<default-locale>de</default-locale>
      	<supported-locale>en</supported-locale>
    </locale-config>
    
    <resource-bundle>
    	<base-name>com.pinhost.app.webshopxxl2.resources.message</base-name>
      	<var>msg</var>
    </resource-bundle>
     
     
	<!--  Beans Package : com.pinhost.app.webshopXXl2.dataBeans  -->

	<managed-bean>
		<managed-bean-name>sessionBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.beans.SessionBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>accountBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.beans.AccountBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>messageBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.beans.MessageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>navigationBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.beans.NavigationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>artikelListBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.beans.ArtikelListBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<!--  Data Beans Package : com.pinhost.app.webshopXXl2.dataBeans  -->

	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.dataBeans.LoginBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
     <managed-bean>
		<managed-bean-name>costumerBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.dataBeans.CostumerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>artikelTypeBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.dataBeans.ArtikelTypBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>warehouseBean</managed-bean-name>
		<managed-bean-class>com.pinhost.app.webshopxxl2.dataBeans.WarehouseBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	 
</faces-config>